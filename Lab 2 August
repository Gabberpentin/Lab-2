// Program that prints day in english when given number
// Eric Brownsberger
// 9/7/2021



#include <iostream>

using std::cin; using std::cout; using std::endl;

int main() {

	cout << "Input number from 01 to 31: ";
	int number;
	cin >> number;

	const int singles = number % 10;
	const int tens = number / 10;

	cout << "tens: " << tens << endl;
	cout << "singles: " << singles << endl;

	switch (tens) {

		case 2:
			cout << "twenty ";
			break;

		case 3:
			cout << "thirty ";
			break;

	}
	
	switch (singles) {

		case 1:
			cout << "one";
			break;

		case 2:
			cout << "two";
			break;

		case 3:
			cout << "three";
			break;

		case 4:
			cout << "four";
			break;

		case 5:
			cout << "five";
			break;

		case 6:
			cout << "six";
			break;

		case 7:
			cout << "seven";
			break;

		case 8:
			cout << "eight";
			break;

		case 9: 
			cout << "nine";
			break;

	}
}
